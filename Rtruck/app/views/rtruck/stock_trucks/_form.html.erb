<%unless @stock_truck.blank?%>
<%= form_for(@stock_truck,:as=>:stocktruck,:html=>{:class=>"form-horizontal"}) do |f|%>

<% if @stock_truck.errors.any? %>
    <div id="error_explanation">
    <h2><%= pluralize(@stock_truck.errors.count, "错误")%> </h2>
      <ul>
      <% @stock_truck.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset class="control-group">
    <%= f.label :车辆牌照,{:class=>"control-label"} %>
    <div class="controls"><%= f.text_field :paizhao %> </div>
  </fieldset>
     <fieldset class="control-group">
     <label class="control-label">自有车辆</label>
  <div class="controls">   <%= f.select(:isself,options_for_select([["自有车辆","自有车辆"],["协议车辆","协议车辆"],["其他车辆","其他车辆"]],@stock_truck.isself) )%></div>
     </fieldset>
  <fieldset class="control-group">
    <%= f.label "核定载重(吨)",:class=>"control-label" %>
   <div class="controls"> <%= f.text_field :dunwei %>  </div>
  </fieldset>
  <fieldset class="control-group">
    <%= f.label "车厢长度(米)" ,{:class=>"control-label"}%>
   <div class="controls">  <%= f.text_field :length %>  </div>
   </fieldset>
  <fieldset class="control-group">
    <%= f.label :车厢结构 ,{:class=>"control-label"} %>
   <div class="controls">  <%= f.select(:shape, options_for_select($truck_shape_reverse.to_a,@stock_truck.shape)) %></div>
  </fieldset>
  <fieldset class="control-group">
    <%= f.label :用途 ,{:class=>"control-label"} %>
   <div class="controls">  <%= f.select(:usage,options_for_select($truck_usage_reverse.to_a,@stock_truck.usage) ) %> </div>
   </fieldset>

  <fieldset class="control-group">
    <%= f.label :有无GPS ,{:class=>"control-label"} %>
   <div class="controls"> <%= f.select(:gps, options_for_select([["有","有"],["无","无"]],@stock_truck.gps)) %></div>
  </fieldset>

  <fieldset class="control-group">
    <%= f.label :叫车联系人,{:class=>"control-label"} %>
   <div class="controls"> <%= f.text_field :business %> </div>
   </fieldset>
  <fieldset class="control-group">
    <%= f.label :叫车联系电话 ,{:class=>"control-label"}%>
   <div class="controls"> <%= f.text_field :bphone %></div>
  </fieldset>
  <fieldset class="control-group">
    <%= f.label :司机姓名 ,{:class=>"control-label"}%>
  <div class="controls">   <%= f.text_field :driver %></div>
  </fieldset>
  <fieldset class="control-group">
    <%= f.label :司机电话 ,{:class=>"control-label"}%>
   <div class="controls"> <%= f.text_field :dphone %></div>
  </fieldset>
  <fieldset class="control-group">
    <%= f.label :车主姓名 ,{:class=>"control-label"}%>
   <div class="controls"> <%= f.text_field :owner %></div>
  </fieldset>
  <fieldset class="control-group">
    <%= f.label :车主电话 ,{:class=>"control-label"}%>
  <div class="controls"> <%= f.text_field :ophone %> </div> 
  </fieldset>

  <fieldset class="control-group">
    <%= f.label :车子品牌 ,{:class=>"control-label"} %>
   <div class="controls"> <%= f.select(:pinpai, options_for_select( $truck_pinpai_reverse.to_a,@stock_truck.pinpai)) %></div> 
  </fieldset>

  <fieldset class="control-group">
    <%= f.label :车子型号 ,{:class=>"control-label"}%>
  <div class="controls">   <%= f.text_field :xinghao %></div>
  </fieldset>

  <fieldset class="control-group">
    <%= f.label :购买年份 ,{:class=>"control-label"}%>    
  <div class="controls"><%= f.select(:buyedat, options_for_select($year_hash_reverse.to_a,@stock_truck.buyedat)) %>   </div>
  </fieldset>

<!--
<div class="field"  style="display:inline">
        <%= f.label :常在城市 ,{:class=>"control-label"} %>    
     <div class="controls"> <a id="from_data_load"  class="company_city" href="/cities/from"><%=@stock_truck.favoc ||"选择"%></a></div>  
     
           <%= f.hidden_field(:favoc, { :class => 'fcitycode' }) %>
  </fieldset>
-->
  <%#= f.hidden_field :user_id %>
  <%#= f.hidden_field :company_id %>
  <%= f.hidden_field :status%>

  <div class="form-actions">
    <%= f.submit("确定",:class=>"btn btn-primary") %>
  </div>

<%end %>
<%end %>