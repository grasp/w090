




<%=render 'rtruck/trucks/province_navi'%>
<%=render 'rtruck/trucks/region_navi'%>
<%=render 'rtruck/trucks/cheng_navi'%>

<% unless @trucks.blank? %>
<table class="truck table table-striped">  
<tr>
 
 <th>出发城市</th>
 <th>到达城市</th>
 <th>车辆</th>
 <th>回程</th>
 <!--  <th>公司</th>-->
 <th>有效</th>
 <th>发布时间</th>
 <th>状态</th>
</tr>


   <% @trucks.each do |truck|%>
   <%unless truck.blank? %>
        <tr>
           
          <td >
          <a class="show_float" href="/cities/modal/show/<%=truck.fcityc%>/line/<%=truck.fcityc%>/<%= truck.tcityc %>">
          <%= truck.fcityn %>
          </a>
          </td>
          <td >
          <a class="show_float" href="/cities/modal/show/<%=truck.tcityc%>/line/<%=truck.fcityc%>/<%= truck.tcityc %>">
          <%= truck.tcityn %>
          </a>
          </td>

            <td> <a data-toggle="modal" href="#TruckShowModal" data-link=<%=truckswhownol_path(truck)%> class="truckshow"><%=truck.paizhao%>,<%=truck.dunwei%>吨 <%=truck.length%>米 <%=$truck_shape[truck.shape]%></a> </td>
          </td>

          <td><%=$truck_huicheng[truck.huicheng]%></td>
          
          <td><%= truck.expire %>天</td>
          <td><%= timeago(truck.created_at) %></td>
          <td><%= truck.status %></td>
    

        </tr>
      <% end %>
    <% end %>
     </table>

     <%else%>
        <p>没有找到对应车源</p>
     <% end %>

 <%= will_paginate(@trucks,:previous_label=>"上一页",:next_label=>"下一页") %>

