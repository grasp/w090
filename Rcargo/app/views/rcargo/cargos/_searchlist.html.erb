<%#coding:utf-8%>
 <%#= cache(:action=>"search", :layout=>nil,:action_suffix =>"cargo#{@action_suffix}") do %>
<%=render 'rcargo/cargos/province_navi'%>

<%=render 'rcargo/cargos/region_navi'%>
<%=render 'rcargo/cargos/cheng_navi'%>
<% unless @cargos.blank? %>
  <table  class="table table-striped table-condesed">

    <tr>
      <th> 出发</th>
      <th> 到达</th>
      <th>货物</th>
      <th>重量</th>
      <th>有效</th>      
      <th>发布日期</th>
      <th>货源状态</th>    
      <th>车主操作</th>
    </tr>


      <% @cargos.each do |cargo| %>     
        <%unless cargo.nil? %>
          <tr>
               <td>    <a class="show_float" href="/cities/modal/show/<%=cargo.fcityc%>/line/<%=cargo.fcityc%>/<%=cargo.tcityc%>">            
              <%= cargo.fcityn %>
              </a>
            </td>
            <td>   
               <a class="show_float" href="/cities/modal/show/<%=cargo.tcityc%>/line/<%=cargo.fcityc%>/<%=cargo.tcityc%>">
             
             <%= cargo.tcityn %>
              </a>
            </td>
  
             <td> <a data-toggle="modal" href="#CargoShowModal" data-link=<%=cargo_path(cargo)%> class="cargoshow"><%=cargo.name%></a> </td>

            <td><%= cargo.weight%><%= cargo.unit %></td>
            <td><%= cargo.expire %>天</td>
            <td><%=timeago(cargo.created_at)%></td>
            <td><%=cargo.status %></td>

          </tr>
        <% end %>
      <% end %>
    </table>

  </div>

  <div class="pagination">
    <%= will_paginate @cargos ,:previous_label=>"上一页",:next_label=>"下一页"%>
  </div>

<%else%>     

  <p>没有对应的货源.</p>   

<%end %>

<div id="CargoShowModal" class="modal hide fade" style="display: none; ">
  <div class="modal-header">
  <button class="close" data-dismiss="modal">×</button>
  <h3>货源详细信息</h3>
  </div>
  <div class="modal-body">              
  
  </div>
  <div class="modal-footer">
  <a href="#" class="btn" data-dismiss="modal">OK</a>
  <!--  <a href="#" class="btn btn-primary">Save changes</a>-->
  </div>
</div>



