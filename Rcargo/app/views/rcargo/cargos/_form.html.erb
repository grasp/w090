
<%= simple_form_for(@cargo,:as=>:cargo,:html => {:class => "form-horizontal"}) do |f| %>

  <% if @cargo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@cargo.errors.count, "错误") %></h2>
      <ul>
        <% @cargo.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <a class="btn" data-toggle="modal" href="#myModal" >Launch Modal</a>
    <div class="modal" id="myModal">
  <div class="modal-header">
    <a class="close" data-dismiss="modal">×</a>
    <h3>Modal header</h3>
  </div>
  <div class="modal-body">
    <p>One fine body…</p>
  </div>
  <div class="modal-footer">
    <a href="#" class="btn">Close</a>
    <a href="#" class="btn btn-primary">Save changes</a>
  </div>
</div>
  <span class="lineselector">
     
  <!-- do not change below  format -->

      <a id="from_data_load" style="display:inline-block;padding: 5px;" href="/cities/from"><%=(@cargo.fcityn.nil?||@cargo.fcityn.empty?) ?"请选择出发地":@cargo.fcityn%></a>
      <%= f.hidden_field(:fcityc, { :class => 'fcitycode' }) %>
      <%= f.hidden_field(:fcityn,{ :class => 'fcityname' }) %>

     <a id="to_data_load" style="display:inline-block;padding: 5px;" href="/cities/to" ><%=(@cargo.tcityn.nil?||@cargo.tcityn.empty?) ?"请选择到达地":@cargo.tcityn%></a>
      <%= f.hidden_field(:tcityc, { :class => 'tcitycode' }) %>
      <%= f.hidden_field(:tcityn,{ :class => 'tcityname' }) %>
   
  <!-- do not change this format -->
</span>
  <div class="control-group">
     <%= f.label t("cargo.cargo_name"),:html=>{:class=>"control-label"}%>
     <div class="controls"> <%= f.text_field(:name)%>  </div>
  </div>
    
  <div class="control-group">
     <%= f.label t("category.BigcargoCategory"),:html=>{:class=>"control-label"}%>
     <div class="controls"> <%= f.select(:big_cate,options_for_select($big_cate_hash.values,@cargo.big_cate))%>  </div>
  </div>

  <div class="control-group">
    <%= f.label t("package.package"),:html=>{:class=>"control-label"}%>
     <div class="controls">  <%= f.select(:packagen,options_for_select($cargo_package.values,@cargo.packagen) )%>  </div>
  </div>

  
   <div class="control-group">
      <label  class="control-label">重量*</label>
     <div class="controls">  <%= f.text_field :weight %>   </div>
   </div>

    <div class="control-group">
    <%= f.label t("stock_cargo.unit"),:html=>{:class=>"control-label"}%>
   <div class="controls">  <%= f.select(:unit,options_for_select(["吨","方","件","车","船","个"],@cargo.zuhuo) )%>  </div>
  </div>
     
  <div class="control-group">
     <label  class="control-label">有效天数*</label>
    <div class="controls">  <%= f.select(:expire,options_for_select([["一天","1"],["当天","0"],["二天","2"],["15天","15"],["一个月","30"],["三个月","90"]],@cargo.expire) )%>   </div>
   </div>
    
   
    <div class="control-group">
     <label  class="control-label" for="cargo_option">组货方式*：</label>
    <div class="controls">  <%= f.select(:zuhuo,options_for_select($cargo_option_reverse.to_a,@cargo.zuhuo) )%>  </div>
    </div>

  
  <div class="control-group">
    <label  class="control-label">自有货源</label>
    <div class="controls"> <%= f.select(:isself,options_for_select([["自有货源","自有货源"],["委托货源","委托货源"],["其他货源","其他货源"]],@cargo.isself) )%>      </div>  </div>
  
    <div class="control-group">
    <label class="control-label">备注：</label>
     <div class="controls"> <%=f.text_area :comments,:rows=>5 %>   </div>
    </div>


    <div class="form-actions">
       <%= f.submit("确 定",:class=>"btn primary") %>
    </div>   

 <%= f.hidden_field :status%>
<%= f.hidden_field :stock_cargo_id%>
<p>*号为必填项</p>

  <% end %>


<div>
<p id="notice"><%= notice %></p>
</div>
