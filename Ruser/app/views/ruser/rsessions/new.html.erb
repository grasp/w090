
<% content_for :sitemap do %><span class="current">加入社区</span><% end %>
<div class="content">

  <div class="box">
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name),:html => {:class => "form-horizontal"}) do |f| %>

      <fieldset>

        <legend><%=t("common.login") %></legend>
        <div class="control-group">

          <%= f.label t("users.username") ,:class=>"control-label"%>


          <div class="controls"><%= f.text_field :login %></div>
        </div>
        <div class="control-group">
          <%= f.label t("users.password") ,:class=>"control-label" %>
          <div class="controls"><%= f.password_field :password %></div>
        </div>
        <% if devise_mapping.rememberable? -%>
          <div class="control-group">
            <label class="control-label"></label>
            <div class="controls">
              <div class="inputs-list"><label for="user_remember_me"><%= f.check_box :remember_me, :style => "width:auto;" %> <%= t("common.remember_me") %></label></div>
            </div>
          </div>
        <% end -%>
        <div class="form-actions">
          <%= f.submit t("common.login"), :class => "btn btn-primary", :disable_with => t("common.logining") %>
        </div>
      </fieldset>

 

    <% end %>
  </div>
</div>

<div class="sidebar">
  <div class="box">
    <h2>还没有帐号？</h2>
    <%= render :partial => "ruser/devise/links" %>
  </div>
  <div class="box">
    <h2>用其他平台的帐号登录</h2>
    <ul>
      <li><%#= link_to "Github", user_omniauth_authorize_path(:github) %> </li>
    </ul>
  </div>
</div>
