
<%= form_for(@company,:as=>:company,:html => {:class => "form-horizontal"}) do |f| %>
  <% if @company.errors.any? %>
    <div id="error_explanation">
      <h4><%= pluralize(@company.errors.count, "error") %></h4>
      <ul>
      <% @company.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label "商家名称*",{:class=>"control-label"} %>
    <div class="controls"><%= f.text_field :name %>  </div>
  </div>

  <div class="control-group">
    <%= f.label "商家介绍*" ,{:class=>"control-label"}%>
    <div class="controls"> <%= f.text_area :about,:class=>"xlarge" %></div>
</div>
  <div class="control-group">
    <%= f.label "商家类型*" ,{:class=>"control-label"}%>
     <div class="controls">     <%= f.select(:ctype,options_for_select(
     [["国内陆运公司","国内陆运公司"],
     ["物流个体","物流个体"],
     ["配货信息部","配货信息部"],
     ["配货站点","配货站点"],
     ["货主企业" ,"货主企业"],
     ["仓储仓库","仓储仓库"],
     ["物流园区","物流园区"],
     ["停车场", "停车场"],
     ["铁路运输","铁路运输"],
     ["海路运输","海路运输"],
     ["内河运输","内河运输"],
     ["航空运输","航空运输"],
     ["国际物流","国际物流"],
     ["快递公司","快递公司"],
     ["物流设备","物流设备"],
     ["搬家服务","搬家服务"],
     ["其他物流类","其他物流类"]],@company.ctype) )%> </div>
</div>




    <div class="control-group">
    <%= f.label :员工数量 ,{:class=>"control-label"}%>
    <div class="controls"><%= f.text_field :numemploy %>  </div>
   </div>

  <div class="control-group">
    <%= f.label :自有车辆 ,{:class=>"control-label"}%>
    <div class="controls"><%= f.text_field :selfche %>  </div>
 </div>
<!--
  <div class="control-group">
    <%= f.label :协议车辆 ,{:class=>"control-label"}%>
    <div class="controls"><%= f.text_field :signedche %>
  </div>
-->

<legend>公司的联系信息 </legend>

<div class="control-group">
      <label class=" control-label fname "><%=@company.cityn||"杭州"%></label>      
      <div class="controls">
        <%=render "rcity/chengs/cheng_modal"%>
       <%= f.hidden_field :cityc,{:class=>"fcitycode"}%>
       <%= f.hidden_field :cityn,{:class=>"fcityname"}%>
      </div>
</div>

  <div class="control-group">
    <%= f.label "商家地址*",{:class=>"control-label"} %>
    <div class="controls"><%= f.text_field :address %>  </div>
  </div>

  <div class="control-group">
    <label class="control-label" style="width:130px;">固定电话区号:</label>
     <div class="controls"> <input  style="width:50px;" id="quhao" name="company[quhao]" type="text" value=<%=@company.quhao%> > </input>  </div>
</div>
     <div class="control-group">
        <label class="control-label" style="width:130px;">固定电话号码:</label>
   <div class="controls">  <input  style="width:150px;" id="companyfix_phone" name="company[fix_phone]" type="text" value=<%=@company.fphone%> > </input> </div>
     <%#= f.text_field :fix_phone %>
</div>

  <div class="control-group">
    <%= f.label "联系人移动电话*",{:class=>"control-label"} %>
    <div class="controls" ><%= f.text_field :mphone %> </div>
 </div>

  <div class="control-group">
    <%= f.label :联系人email ,{:class=>"control-label"}%>
    <div class="controls"><%= f.text_field :email %></div>
</div>
<%#= f.hidden_field :user_id %>
<%#= f.hidden_field :user_name %>
<%= f.hidden_field(:ispersonal) %>
  <div class="form-actions">
    <%= f.submit("确定",:class=>"btn btn-primary")%>
  </div>

<% end %>

<p id="notice"><%= notice %></p>

