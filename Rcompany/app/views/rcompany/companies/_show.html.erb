<%unless @company.name.blank?%>
<div  class="lineshow">
  <h3><%= @company.name %></h3>
 </div>
<hr></hr>
  <div class="lineshow">
    <div  class="span2">商家介绍:</div>  
    <div class="offset2 about"><%=@company.about %></div>
  </div>

  <div class="lineshow">
    <div  class="span2">商家类型:</div>  
    <%if @company.ctype==nil %>
    <%@company.update_attribute(:ctype,"国内陆运公司")%>
    <%end%>
    <div class="offset2 about"><%=(@company.ctype)%></div>
  </div>


  <div class="lineshow">
  <div class="span2">所在城市:</div>
  <div class="offset2"><%= @company.cityn||"" %></div>
</div>

<div class="lineshow">
  <div class="span2">商家地址:</div>
  <div class="offset2"> <%= @company.address||"" %></div>
</div>

<div class="lineshow">
  <div class="span2">固定电话:</div>
<div class="offset2"> <%= @company.quhao||""+"-"+@company.fphone||"" %></div>
</div>

<div class="lineshow">
  <div class="span2">移动电话:</div>
<div class="offset2"> <%= @company.mphone||"" %></div>
</div>

<div class="lineshow">
  <div class="span2">商家邮件:</div>
  <div class="offset2"> <%= @company.email||"" %></div>
</div>

<div class="lineshow">
  <div class="span2">自有车辆:</div>
  <div class="offset2"> <%= @company.selfche||"" %></div>
</div>

<div class="lineshow">
  <div class="span2">挂靠车辆:</div>
  <div class="offset2"> <%= @company.signedche||"0" %></div>
</div>

<div class="lineshow">
 <div class="span2">员工数量:</div>
 <div class="offset2"> <%= @company.numemploy %></div>
</div>

<%else%>
<div class="lineshow">
    你还没有创建你的商家信息.
    <a  class="btn btn-primary" href="/rcompany/companies/new">马上创建</a>
</div>

<%end%>
  

